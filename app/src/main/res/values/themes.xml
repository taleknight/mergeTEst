<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SalaoBelezaSpaceX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnightblue</item>
        <item name="colorPrimaryVariant">@color/midnightblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/NoActionBar</item>

    </style>

    <style name="NoActionBar">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:showAsAction">ifRoom</item>
        <item name="android:titleTextStyle">@null</item>
    </style>


    <style name="Theme.SalaoBelezaSpaceX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Theme.SalaoBelezaSpaceX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SalaoBelezaSpaceX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>